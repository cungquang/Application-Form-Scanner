@model BCHousing.AfsWebAppMvc.Entities.Session.SubmissionViewInputModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Home Page</h1>
    @if (Model.UploadFileName.Count > 0)
    {
        <div class="text-center">
            <table class="table-responsive">
            <thead>
                <tr>
                    <th>Upload File Name</th>
                    <th>File Size</th>
                    <th>Document Type</th>
                    <th>Submit By</th>
                    <th>Success Or False</th>
                </tr>
            </thead>
            <tbody>
                    @for (int i = 0; i < Model.UploadFileName.Count; i++)
                    {
                        <tr>
                            <td>@Model.UploadFileName[i]</td>
                            <td>@Model.UploadFileSize[i]</td>
                            <td>@Model.DocumentType[i]</td>
                            <td>@Model.FirstName[i], @Model.LastName[i]</td>
                            <td>@Model.IsSuccess[i].ToString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>