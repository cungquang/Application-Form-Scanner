@model IList<BCHousing.AfsWebAppMvc.Entities.Form>

@using(Html.BeginForm("Edit", "Home", new { submissionId = Model[0].submissionId, activeTab = 2 }, FormMethod.Post)){
    <table>
        <thead>
            <tr>
                <th>Field Name</th>
                <th>Field Value</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    @Html.HiddenFor(m => m[i].submissionId)
                    @Html.HiddenFor(m => m[i].sequence)
                    <td>
                        @Html.DisplayFor(m => m[i].field_name)
                    </td>
                    <td>
                        @Html.EditorFor(m => m[i].field_value, new { htmlAttributes = new { @class = "form-control text-danger"}})
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="col-md-offset-2 col-md-19">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
}